<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaDeOpcoes">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/background"
                android:orientation="vertical">


            <!--        linear da imagem-->
            <LinearLayout
                    android:layout_width="71.48dp"
                    android:layout_height="54.41dp"
                    android:gravity="center">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_logo_resenha2" />

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_resenha"
                        android:text="O que você quer Jogar?"
                        android:textAlignment="center"
                        android:textSize="24.84sp" />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_resenha"
                    android:layout_marginTop="30dp"
                    android:text="Futebol"
                    android:textAlignment="center"
                    android:textSize="24.84sp" />

            <ImageView
                    android:layout_width="295dp"
                    android:layout_height="170dp"
                    android:src="@drawable/futebol"
                    android:layout_marginLeft="60dp"
                    android:onClick="modalidadeFutebol"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/blue_resenha"
                    android:text="Basquete"
                    android:textAlignment="center"
                    android:textSize="24.84sp" />

            <ImageView
                    android:layout_width="295dp"
                    android:layout_height="170dp"
                    android:src="@drawable/basquete"
                    android:layout_marginLeft="60dp"
                    android:onClick="modalidadeBasquete"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/blue_resenha"
                    android:text="Tênis"
                    android:textAlignment="center"
                    android:textSize="24.84sp" />

            <ImageView
                    android:layout_width="293dp"
                    android:layout_height="170dp"
                    android:src="@drawable/tenis"
                    android:layout_marginLeft="60dp"
                    android:onClick="modalidadeTenis"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_resenha"
                    android:layout_marginTop="30dp"
                    android:text="Vôlei"
                    android:textAlignment="center"
                    android:textSize="24.84sp" />

            <ImageView
                    android:layout_width="295dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/volei"
                    android:onClick="modalidadeTenis"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>