<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SobreNos">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/background"
            android:orientation="vertical">


        <!--        linear da imagem-->
        <LinearLayout
                android:layout_width="71.48dp"
                android:layout_height="54.41dp"
                android:gravity="center">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_logo_resenha2" />

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_resenha"
                    android:text="Seja Bem vindo ao Resenha!"
                    android:textAlignment="center"
                    android:textSize="24.84sp" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue_resenha"
                    android:textAlignment="center"
                    android:layout_marginTop="80dp"
                    android:text="O RESENHA é um grupo que tem como objetivo proporcionar a melhor experiência para os donos de quadras e jogadores com relação a locação de quadras esportivas e assim, garantir que os agendamentos de quadras ocorram da melhor forma possível."
                    android:textSize="24.84sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>