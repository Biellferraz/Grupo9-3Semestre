<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Agendamento">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/background"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <ImageView
                        android:layout_width="200dp"
                        android:layout_height="100dp" />
            </LinearLayout>

            <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp">

                    <EditText
                            android:id="@+id/et_nome"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/blue_resenha"
                            android:hint="NOME DO JOGADOR RESPONSAVEL" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                    <EditText
                            android:id="@+id/eT_centroEsportivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/blue_resenha"
                            android:hint="SELECIONE UM CENTRO ESPORTIVO" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">


                    <EditText
                            android:id="@+id/eT_quadraEsportiva"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/blue_resenha"
                            android:hint="SELECIONE UMA QUADRA" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                    <EditText
                            android:id="@+id/eT_horariosDisponiveis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/blue_resenha"
                            android:hint="HORARIOS DISPONIVEIS" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/eT_modalidade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/blue_resenha"
                            android:hint="MODALIDADE"/>

                    <Spinner
                            android:id="@+id/eT_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                    <EditText
                            android:id="@+id/eT_confirmacaoHorario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/blue_resenha"
                            android:hint="CONFIRMAÃ‡AO DE HORARIO" />

                    <EditText
                            android:id="@+id/eT_valor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="VALOR"
                            android:paddingRight="10dp" />
                </LinearLayout>




                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:gravity="center">

                    <Button
                            android:id="@+id/eT_agendar"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/blue_resenha2"
                            android:text="AGENDAR"
                            android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>