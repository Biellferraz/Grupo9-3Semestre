<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PagamentoDesejavel">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/background"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="71.48dp"
                    android:layout_height="54.41dp"
                    android:gravity="center">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_logo_resenha2" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:textColor="@color/white" />

                <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telefone"
                        android:textColor="@color/white" />

                <EditText
                        android:id="@+id/telefone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aceitamos as Bandeiras:"
                        android:textColor="@color/white" />

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_mastercardmartercard" />

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Numero do cartão"
                        android:textColor="@color/white" />

                <EditText
                        android:id="@+id/numero_Cartao"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left" />


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="200dp"
                            android:text="Expiração"
                            android:textColor="@color/white" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="100dp"
                            android:text="cvv"
                            android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <EditText
                            android:id="@+id/cvv"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="140dp"/>

                    <EditText
                            android:id="@+id/expiracao"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="100dp"/>
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CPF"
                        android:textColor="@color/white" />

                <EditText
                        android:id="@+id/Cpf"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="Continuar"
                        android:text="Continuar"
                        android:textColor="@color/blue_resenha"
                        android:backgroundTint="@color/transaparent"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="120dp"/>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>